<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <Button
        android:id="@+id/btnOmitir"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:background="@color/transparent"
        android:enabled="true"
        android:fontFamily="@font/montserrat_bold"
        android:text="Omitir"
        android:textColor="@color/pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Iniciar sesión en TikTok"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOmitir"
        app:layout_constraintVertical_bias="0.042" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="339dp"
        android:layout_height="359dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.065">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/black"
            android:padding="12dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="23dp"
                android:layout_height="17dp"
                android:background="@drawable/cccqr" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_bold"
                android:paddingLeft="65dp"
                android:text="Usar codigo QR"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnUserTelCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/boton"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/black"
            android:padding="13.5dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="14dp"
                android:layout_height="15dp"
                android:background="@drawable/person_icono"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_bold"
                android:paddingLeft="10dp"
                android:text="Usar telefono/correo/nombre de usuario"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/boton"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/black"
            android:padding="13.5dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="14dp"
                android:layout_height="15dp"
                android:background="@drawable/fc"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_bold"
                android:paddingLeft="55dp"
                android:text="Continuar con Facebook"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/boton"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/black"
            android:padding="13.5dp">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="14dp"
                android:layout_height="15dp"
                android:background="@drawable/google_icon"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_bold"
                android:paddingLeft="62dp"
                android:text="Continuar con Google"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/boton"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/black"
            android:padding="13.5dp">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="14dp"
                android:layout_height="15dp"
                android:background="@drawable/twter"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_bold"
                android:paddingLeft="60dp"
                android:text="Continuar con Twitter"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/boton"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/black"
            android:padding="13.5dp">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="14dp"
                android:layout_height="15dp"
                android:background="@drawable/apple_icon"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_bold"
                android:paddingLeft="65dp"
                android:text="Continuar con Apple"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/boton"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/black"
            android:padding="13.5dp">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="14dp"
                android:layout_height="15dp"
                android:background="@drawable/insta"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_bold"
                android:paddingLeft="50dp"
                android:text="Continuar con Instagram"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="336dp"
        android:layout_height="34dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Al continuar, confirmas que estás de acuerdo con los Términos de uso de TikTok y que has leído la Política de privacidad de TikTok."
        android:textAlignment="center"
        android:textSize="9dp"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.162"
        tools:ignore="TextSizeCheck" />

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="37dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19"
        app:layout_constraintVertical_bias="0.466">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="100dp"
            android:paddingRight="0dp"
            android:text="¿No tienes cuenta?" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_bold"
            android:text="Registrate"
            android:textColor="@color/pink" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>